{
    "manifest_version": 3,
    "name": "Rightmove Price Calculator",
    "version": "1.0",
    "description": "Calculate price per square foot for Rightmove listings",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "https://*.rightmove.co.uk/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["https://www.rightmove.co.uk/properties/*"],
            "js": ["tesseract.min.js", "content.js"]
        }
    ]
}